{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "dom",
      "WebWorker"
    ],
    "listFiles": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "removeComments": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "types": [
      "@types/wicg-file-system-access",
      "user-agent-data-types",
      "node",
      "offscreencanvas",
    ]
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/KotOR.ts",
    "src/types",
    "src/index.d.ts"
  ]
}