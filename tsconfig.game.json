{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "sourceMap": false,
    "listFiles": false,
    "newLine": "LF",
    "noEmitOnError": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "@types/wicg-file-system-access",
      "node",
      "offscreencanvas",
    ],
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "dist",
  },
  "include": ["src/apps/game/game.ts", "src/types", "src/index.d.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"],
  "paths" :{
    "jison":["src/types/jison"],
  }
}